    <div class="wish">
      ðŸŽ‚ Happy Birthday, Amira! <br>
      You are the candle to my cake, the smile to my face, and the sparkle to my soul. <br>
      May your day be as magical as your heart. ðŸ’•
    </div>
  </div>

  <script>
    const targetDate = new Date("September 30, 2025 00:00:00").getTime();

    const countdownEl = document.getElementById("countdown");
    const beforeBirthday = document.getElementById("before-birthday");
    const birthdaySurprise = document.getElementById("birthday-surprise");

    const updateCountdown = () => {
      const now = new Date().getTime();
      const gap = targetDate - now;

      if (gap <= 0) {
        beforeBirthday.classList.add("hidden");
        birthdaySurprise.classList.remove("hidden");
        clearInterval(timer);
        return;
      }

      const days = Math.floor(gap / (1000 * 60 * 60 * 24));
      const hours = Math.floor((gap % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((gap % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((gap % (1000 * 60)) / 1000);

      countdownEl.textContent = `${days}d ${hours}h ${minutes}m ${seconds}s`;
    };

    function blow(candle) {
      const flame = candle.querySelector(".flame");
      flame.style.display = "none";
    }

    const timer = setInterval(updateCountdown, 1000);
    updateCountdown();
  </script>
